{
  "package": {
    "name": "kaadin",
    "repo": "maven",
    "subject": "iftiali",
    "website_url": "https://github.io/",
    "issue_tracker_url": "https://github.com/",
    "vcs_url": "https://github.com/iftiali",
    "licenses": ["Apache-2.0"],
    "labels": ["vaadin", "kotlin"],
    "public_download_numbers": false,
    "public_stats": false
  },
  "version": {
    "name": "${project.version}",
    "released": "${build.timestamp}",
    "vcs_tag": "v${project.version}"
  },
  "files":
  [
    {"includePattern": "kaadin-core/target/(.*\.jar)", "uploadPattern": "ch/frankel/kaadin/kaadin-core/${project.version}/$1"},
    {"includePattern": "kaadin-core/pom.xml", "uploadPattern": "ch/frankel/kaadin/kaadin-core/${project.version}/kaadin-core-${project.version}.pom"}
  ],
  "publish": true
}
